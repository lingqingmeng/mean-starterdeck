extends alternatelayout
body
    block content
        h1= title
        form( method="post")
            div.list-group
                d1.d1-horizontal
                    div.list-group-item
                        dt
                            span Title :
                        dd
                            input(type="text", name="title", id="editArticleTitle")
                    div.list-group-item
                        dt
                            span Body :
                        dd
                            textarea( name="body", rows=10, id="editArticleBody")
                    div.list-group-item
                        dt
                            span Startscore :
                        dd 
                            select#editCommentScore(name='startscore')
                                option(value='1') 1
                                option(value='2') 2
                                option(value='3') 3
                                option(value='4') 4
                                option(value='5') 5
                    div#editArticleSubmit
                        input(type="submit", value="Send")